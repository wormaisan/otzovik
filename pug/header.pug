-
    let logo = {src: "./img/common/header/logo.svg", alt:"logo", link: "./index.html"}

    let menuItems = [
        {title: 'Брокеры', link: '#'},
        {title: 'Инвест. компании', link: '#'},
        {title: 'Финансовые курсы', link: '#'},
        {title: 'Форум', link: '#'}
    ];

    let burgerMenuItems = [
        {title:'Брокеры', link:'#'},
        {title:'Финансовые курсы', link:'#'},
        {title:'Инвестиционные компании', link:'#'},
        {title:'Форум', link:'#'}
    ];

    let headerBtn = {title:'Академия бизнес инвесторов', link:'#'};

    let socialItems = [
        {src:'./img/common/header/social_icons.svg', link:'#', title:'instagram', id:'instagram'},
        {src:'./img/common/header/social_icons.svg', link:'#', title:'twitter', id:'twitter'},
        {src:'./img/common/header/social_icons.svg', link:'#', title:'facebook', id:'facebook'},
        {src:'./img/common/header/social_icons.svg', link:'#', title:'vk', id:'vk'}
    ];

header.header

    .container

        .header__body.g-0.row.justify-content-between.align-items-center
            a.header__logo.col-4.col-md-1(href=logo.link)
                img(src=logo.src alt=logo.alt)
            nav.header__menu.gx-xxl-4.col-xxl-5
                ul
                  each val in menuItems
                      li
                          a.linkHover(href=val.link)=val.title
            .header__mainSocial.header__social.gx-xxl-4.col-xl-3
                ul
                  each val in socialItems
                      li
                          a(href=val.link title=val.title)
                              svg.iconHover
                                  defs
                                      linearGradient(id="gradient-social-main")
                                          stop(offset="2.1%" stop-color="#35D5A5")
                                          stop(offset="32.94%" stop-color="#00C7C5")
                                          stop(offset="57.62%" stop-color="#2D9BE0")
                                          stop(offset="71.52%" stop-color="#5277F7")
                                          stop(offset="79.13%" stop-color="#5B75F6")
                                          stop(offset="91.42%" stop-color="#7370F4")
                                          stop(offset="98.23%" stop-color="#836DF3")
                                  use(xlink:href=val.src + "#" + val.id)
            a.header__btn.blockBtn.btnHover.gx-xxl-4.col-7.col-lg-5(href=headerBtn.link)=headerBtn.title
            button.header__burgerIcon.col-2.col-md-1
                span
                span
                span

.header__burgerContainer
    .header__burgerBodyWrapper
        .header__burgerBody
            .header__burgerMenu
                ul
                  each val in burgerMenuItems
                    li
                        .container
                            a.linkHover(href=val.link)=val.title
            a.header__burgerBtn.blockBtn.btnHover(href=headerBtn.link)=headerBtn.title
            .header__burgerSocial.header__social
                ul
                  each val in socialItems
                    li
                        a(href=val.link title=val.title)
                            svg.iconHover
                                defs
                                    linearGradient(id="gradient-social-burger")
                                        stop(offset="2.1%" stop-color="#35D5A5")
                                        stop(offset="32.94%" stop-color="#00C7C5")
                                        stop(offset="57.62%" stop-color="#2D9BE0")
                                        stop(offset="71.52%" stop-color="#5277F7")
                                        stop(offset="79.13%" stop-color="#5B75F6")
                                        stop(offset="91.42%" stop-color="#7370F4")
                                        stop(offset="98.23%" stop-color="#836DF3")
                                use(xlink:href=val.src+"#"+val.id)